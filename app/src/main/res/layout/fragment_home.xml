<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BmiFragment"
    android:background="@drawable/backgroundcolorblue"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginBottom="7dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroundcolorblue">

        <androidx.cardview.widget.CardView

            android:layout_width="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_margin="12dp"
            android:layout_height="110dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:text="Age (Years)"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>


                <EditText
                    android:id="@+id/edAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:ems="3"
                    android:gravity="center"
                    android:hint="21"
                    android:inputType="numberDecimal"
                    android:textSize="28sp" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_margin="12dp"
            android:layout_height="110dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:text="Gender"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/radioGroupGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioButtonMale"
                            android:layout_width="65dp"
                            android:layout_height="70dp"
                            android:button="@android:color/transparent"
                            android:background="@drawable/malegenderbody"
                            android:visibility="visible"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="35dp"

                            />

                        <RadioButton
                            android:id="@+id/radioButtonFemale"
                            android:layout_width="65dp"
                            android:layout_height="70dp"
                            android:button="@android:color/transparent"
                            android:background="@drawable/femalegenderbody"
                            android:visibility="visible"
                            />
                        <!--radiobuttondaki tik işareti gözükmesin diye transparent yaptım -->

                    </RadioGroup>

                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="7dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView

                android:layout_width="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_margin="12dp"
                android:layout_height="110dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:text="Height"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>


                    <EditText
                        android:id="@+id/edCm"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:ems="3"
                        android:gravity="center"
                        android:hint="1.93cm"
                        android:inputType="numberDecimal"
                        android:textSize="28sp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView

                android:layout_width="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_margin="12dp"
                android:layout_height="110dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:text="Weight (Kg)"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>


                    <EditText
                        android:id="@+id/edKg"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:ems="3"
                        android:gravity="center"
                        android:hint="90 kg"
                        android:inputType="numberDecimal"
                        android:textSize="28sp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_margin="12dp"
                android:layout_height="110dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:text="Dest. Weight"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>


                    <EditText
                        android:inputType="numberDecimal"
                        android:id="@+id/edKgDest"
                        android:layout_width="wrap_content"
                        android:ems="3"
                        android:textSize="28sp"
                        android:hint="80 kg"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="65dp">
    <androidx.cardview.widget.CardView

        android:layout_margin="12dp"
        app:cardElevation="2dp"
        android:id="@+id/calculateButton"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#03A9F4"
        android:layout_width="match_parent"
        android:layout_height="60dp">


        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:text="Calculate"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView

        android:layout_margin="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:text="Daily Nutrition"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/textCal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Calories: 0 kcal"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textProtein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Protein: 0 g"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textCarbohydrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Carbohydrate: 0 g"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textFat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Fat: 0 g"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    </LinearLayout>
