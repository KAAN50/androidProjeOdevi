<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BmiFragment"
    android:background="@drawable/backgroundcolorblue"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginBottom="7dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView

            android:layout_width="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_margin="12dp"
            android:layout_height="110dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:text="Age (Years)"
                    android:textColor="@color/black"
                    android:background="@drawable/backgroundcolorblue"

                    android:layout_height="wrap_content"/>


                <EditText
                    android:id="@+id/edAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:ems="3"
                    android:gravity="center"
                    android:hint="21"
                    android:inputType="numberDecimal"
                    android:textSize="28sp" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_margin="12dp"
            android:layout_height="110dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:text="Gender"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:background="@drawable/backgroundcolorblue"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/radioGroupGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioButtonMale"
                            android:layout_width="65dp"
                            android:layout_height="70dp"
                            android:button="@android:color/transparent"
                            android:background="@drawable/malegenderbody"
                            android:visibility="visible"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="35dp"

                            />

                        <RadioButton
                            android:id="@+id/radioButtonFemale"
                            android:layout_width="65dp"
                            android:layout_height="70dp"
                            android:button="@android:color/transparent"
                            android:background="@drawable/femalegenderbody"
                            android:visibility="visible"
                            />
                        <!--radiobuttondaki tik işareti gözükmesin diye transparent yaptım -->

                    </RadioGroup>

                </LinearLayout>


            </LinearLayout>






        </androidx.cardview.widget.CardView>





    </LinearLayout>



    <LinearLayout
        android:layout_marginBottom="7dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView

            android:layout_width="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_margin="12dp"
            android:layout_height="110dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:text="Height"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:background="@drawable/backgroundcolorblue"
                    />


                <EditText
                    android:id="@+id/edCm"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:ems="3"
                    android:gravity="center"
                    android:hint="1.93cm"
                    android:inputType="numberDecimal"
                    android:textSize="28sp" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_margin="12dp"
            android:layout_height="110dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:text="Weight (Kg)"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:background="@drawable/backgroundcolorblue"
                    />


                <EditText
                    android:inputType="numberDecimal"
                    android:id="@+id/edKg"
                    android:layout_width="wrap_content"
                    android:ems="3"
                    android:textSize="28sp"
                    android:hint="80 kg"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"/>






            </LinearLayout>






        </androidx.cardview.widget.CardView>









    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="50dp"
        android:layout_weight="1"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">



        <LinearLayout
            android:layout_width="310dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/backgroundcolorblue"
                android:text="What is your purpose?"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioGroup
                        android:id="@+id/radioGroupPurpose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/radioLoseWeight"
                            android:layout_width="300dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="7dp"
                            android:gravity="center"
                            android:text="Lose weight"
                            android:textSize="18sp" />

                        <RadioButton
                            android:id="@+id/radioMaintainWeight"
                            android:layout_width="300dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="7dp"
                            android:gravity="center"
                            android:text="Maintaining weight"
                            android:textSize="18sp" />

                        <RadioButton
                            android:id="@+id/radioGainWeight"
                            android:layout_width="300dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="7dp"
                            android:gravity="center"
                            android:text="Gaining weight"
                            android:textSize="18sp" />
                    </RadioGroup>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_margin="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@color/lavender"
                android:text="           BMI         |         Kcal            |      Macro's            "
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textBmi"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textColor="#03A9F4"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <!-- BİRBİRLERİ ARASINDA BOŞLUK OLSUN DİYE YAPTIM-->
                <View
                    android:layout_width="12dp"
                    android:layout_height="1dp"
                    android:layout_weight="0" />

                <TextView
                    android:id="@+id/textCal"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textColor="#03A9F4"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <!-- BİRBİRLERİ ARASINDA BOŞLUK OLSUN DİYE YAPTIM-->
                <View
                    android:layout_width="12dp"
                    android:layout_height="1dp"
                    android:layout_weight="0" />

                <TextView
                    android:id="@+id/textMakro"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textColor="#03A9F4"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_margin="12dp"
        app:cardElevation="2dp"
        android:id="@+id/calculateButton"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#03A9F4"
        android:layout_width="match_parent"
        android:layout_height="60dp">


        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:text="Calculate"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>






    </androidx.cardview.widget.CardView>






</LinearLayout>