<?xml version="1.0" encoding="utf-8"?>



    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".NutrientsFragment"
        android:background="@drawable/backgroundcolorblue"
        >

        <!-- Günlük Almanız Gereken Besin Değerleri -->
        <LinearLayout
            android:id="@+id/dailyRecommendationLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Günlük Almanız Gereken Besin Değerleri"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#333333"
                android:layout_gravity="center"
                android:layout_marginBottom="0dp"/>

            <!-- Macronutrients Layout -->
            <LinearLayout
                android:id="@+id/daymacrosLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:background="#ffffff"
                android:elevation="4dp"
                >

                <!-- Karbonhidrat -->
                <LinearLayout
                    android:id="@+id/carbLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Karbonhidrat"
                        android:background="@drawable/backgroundcolorblue"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/daytVCarbNutrients"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:textColor="#333333"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Protein -->
                <LinearLayout
                    android:id="@+id/proteinLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Protein"
                        android:background="@drawable/backgroundcolorblue"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/daytVProteinNutrients"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:textColor="#333333"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Yağ -->
                <LinearLayout
                    android:id="@+id/fatLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yağ"
                        android:background="@drawable/backgroundcolorblue"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/daytVFatNutrients"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:textColor="#333333"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Kalori -->
                <LinearLayout
                    android:id="@+id/calLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kalori"
                        android:textStyle="bold"
                        android:background="@drawable/backgroundcolorblue"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/daytVCalNutrients"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:textColor="#333333"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Bugün Almış Olduğunuz Toplam Besin Değerleri -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-12dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="167dp"
             android:text="Bugün Almış Olduğunuz Toplam Besin Değerleri"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

        <!-- Besin Değerleri -->
        <LinearLayout
            android:id="@+id/macrosLayout"
            android:layout_marginTop="180dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:padding="20dp"
            android:background="#ffffff"
            android:elevation="4dp">

            <!-- Karbonhidrat -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Karbonhidrat"
                    android:background="@drawable/backgroundcolorblue"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tVCarbNutrients"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:textColor="#333333"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Protein -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Protein"
                    android:background="@drawable/backgroundcolorblue"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tVProteinNutrients"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:textColor="#333333"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Yağ -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yağ"
                    android:background="@drawable/backgroundcolorblue"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tVFatNutrients"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:textColor="#333333"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Kalori -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kalori"
                    android:textStyle="bold"
                    android:background="@drawable/backgroundcolorblue"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tVCalNutrients"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:textColor="#333333"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Alt kısımdaki günün öğünleri ve toplam sonuçlar -->


    <LinearLayout
        android:id="@+id/mealsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/macrosLayout"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/whitebackground">

        <!-- Sabah Öğünü -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- ListView ve Toplam Sonuçlar -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sabah Öğünü"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:background="@drawable/backgroundcolorblue"
                    android:layout_marginBottom="6dp" />

                <ListView
                    android:id="@+id/listBreakfast"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="16dp"
                    android:background="#ffffff"
                    android:divider="@android:color/darker_gray"
                    android:dividerHeight="1dp"
                    android:scrollbarAlwaysDrawVerticalTrack="true" />

                <TextView
                    android:id="@+id/totalBreakfast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toplam: 0 Kalori"
                    android:textStyle="bold"
                    android:textColor="#333333" />

            </LinearLayout>



            <!-- Besin eklemek için buton -->
            <Button
                android:id="@+id/breakfastButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:backgroundTint="#009688"
                android:background="@drawable/backgroundcolorblue"
                android:textColor="@color/black"
                android:layout_gravity="end"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!--boşluk için-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:background="@drawable/backgroundcolorblue"/>

        <!-- Öğle Öğünü -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="11dp">

            <!-- ListView ve Toplam Sonuçlar -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Öğle Öğünü"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:background="@drawable/backgroundcolorblue"
                     />

                <ListView
                    android:id="@+id/listLunch"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:divider="@android:color/darker_gray"
                    android:dividerHeight="1dp"
                    android:background="#ffffff"
                    android:layout_marginBottom="16dp"
                    android:scrollbarAlwaysDrawVerticalTrack="true"/>

                <TextView
                    android:id="@+id/totalLunch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toplam: 0 Kalori"
                    android:textStyle="bold"
                    android:textColor="#333333" />

            </LinearLayout>

            <!-- Besin eklemek için buton -->
            <Button
                android:id="@+id/lunchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:backgroundTint="#009688"
                android:textColor="@color/black"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:background="@drawable/backgroundcolorblue"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:background="@drawable/backgroundcolorblue"/>

        <!-- Akşam Öğünü -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="11dp">

            <!-- ListView ve Toplam Sonuçlar -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Akşam Öğünü"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:background="@drawable/backgroundcolorblue"
                     />

                <ListView
                    android:id="@+id/listDinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:divider="@android:color/darker_gray"
                    android:dividerHeight="1dp"
                    android:background="#ffffff"
                    android:layout_marginBottom="16dp"
                    android:scrollbarAlwaysDrawVerticalTrack="true"/>

                <TextView
                    android:id="@+id/totalDinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toplam: 0 Kalori"
                    android:textStyle="bold"
                    android:textColor="#333333" />

            </LinearLayout>

            <!-- Besin eklemek için buton -->
            <Button
                android:id="@+id/dinnerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:backgroundTint="#009688"
                android:textColor="@color/black"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:background="@drawable/backgroundcolorblue"
                />
        </LinearLayout>
    </LinearLayout>

    </RelativeLayout>


